<h1><%= @contact.name %></h1>

<a href = "/contacts/<%= @contact.id %>/phones/new">Add Phone</a>

<p>Phones:</p>

<ul>
  <% @contact.phones.each do |phone| %>
    <li>
      <%= phone.number %>
      <a href="/contacts/<%= @contact.id %>/phones/<%= phone.id %>/edit">Edit</a> |
    </li>
  <% end %>
</ul>



<p><a href="/contacts/<%= @contact.id %>/edit">Edit this contact</a></p>
<p><a href="/contacts">Return to contact list</a></p>
